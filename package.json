{
    "name": "git-changesets",
    "version": "0.0.2",
    "description": "Github Action to determine changed files (aka changesets)",
    "main": "lib/main.js",
    "scripts": {
        "test": "npx concurrently npm:test:lint npm:test:unit",
        "test:unit": "npx jest",
        "test:lint": "npx eslint src/**/*.ts",
        "build": "npx tsc && npx ncc build --source-map",
        "commit": "npx git-cz",
        "lint:staged": "npx pretty-quick --staged"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/collin-miller/git-changesets.git"
    },
    "author": "unicorn-froyo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/collin-miller/git-changesets/issues"
    },
    "homepage": "https://github.com/collin-miller/git-changesets#readme",
    "devDependencies": {
        "@commitlint/config-conventional": "^8.2.0",
        "@jest/globals": "^26.6.2",
        "@types/jest": "^26.0.23",
        "@types/nock": "^11.1.0",
        "@types/node": "^13.1.2",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "@zeit/ncc": "^0.22.3",
        "commitizen": "^4.0.3",
        "commitlint": "^8.2.0",
        "eslint": "^7.25.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^3.1.0",
        "jest": "^26.6.3",
        "jest-cli": "^26.6.3",
        "nock": "^13.0.11",
        "nodemon": "^2.0.2",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "ts-jest": "^26.5.5",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx concurrently npm:test:unit npm:test:lint npm:lint:staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "jest": {
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "functions": 100,
                "lines": 90
            }
        }
    },
    "dependencies": {
        "@actions/core": "^1.2.7",
        "@actions/github": "^4.0.0"
    }
}
